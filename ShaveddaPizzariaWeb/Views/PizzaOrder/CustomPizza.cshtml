@model ShaveddaPizzaria.Models.PizzaOrder

<div class="container font-monospace">
	<div>
		<h1 class="display-4 mt-4">Custom Pizza</h1>
		<hr />
	</div>
	<div class="border border-warning border-4 rounded-3 px-4 py-3 mt-4 bg-black bg-opacity-50">
		<div class="row justify-content-center">
			<div class="col-4 mb-2 align-middle align-self-center">
				<img src="~/images/presets/Create.png" class="w-100" />
			</div>
		</div>
		<form method="post" class="was-validated" novalidate>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label col-form-label-lg text-white">Pizza name</label>
				<div class="col-sm-10">
					<input type="text" class="form-control form-control-lg" asp-for="OrderDetails.PizzaName" maxlength="30" required>
					<div class="invalid-feedback">
						Please enter a name.
					</div>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label col-form-label-lg text-white">Address</label>
				<div class="col-sm-10">
					<textarea type="text" class="form-control form-control-lg" rows="3" asp-for=Address maxlength="150" required></textarea>
					<div class="invalid-feedback">
						Please enter an address.
					</div>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label col-form-label-lg text-white">Size</label>
				<div class="col-sm-10">
					<select class="form-select form-select-lg" asp-for="OrderDetails.PizzaSize" asp-items="Html.GetEnumSelectList<PizzaSize>()" required>
						<option value="" selected disabled>--Select Size--</option>
					</select>
					<div class="invalid-feedback">
						Please select a size.
					</div>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label col-form-label-lg text-white">Sauce</label>
				<div class="col-sm-10">
					<select class="form-select form-select-lg" asp-for="OrderDetails.PizzaSauce" asp-items="Html.GetEnumSelectList<PizzaSauce>()" required>
						<option value="" selected disabled>--Select Sauce--</option>
					</select>
					<div class="invalid-feedback">
						Please select a sauce.
					</div>
				</div>
			</div>
			<fieldset class="row mt-2 mb-3">
				<legend class="col-sm-2 col-form-label col-form-label-lg pt-0">Ingredients</legend>
				<div class="col-sm-5 form-check">
					<div class="form-check ps-0">
						<input type="checkbox" class="btn-check" asp-for="OrderDetails.HasCheese" autocomplete="off">
						<label class="btn btn-outline-primary mb-3 me-2" asp-for="OrderDetails.HasCheese">Cheese</label>

						<input type="checkbox" class="btn-check" asp-for="OrderDetails.HasPepperoni" autocomplete="off">
						<label class="btn btn-outline-primary mb-3 me-2" asp-for="OrderDetails.HasPepperoni">Pepperoni</label>

						<input type="checkbox" class="btn-check" asp-for="OrderDetails.HasMushroom" autocomplete="off">
						<label class="btn btn-outline-primary mb-3 me-2" asp-for="OrderDetails.HasMushroom">Mushroom</label>

						<input type="checkbox" class="btn-check" asp-for="OrderDetails.HasPineapple" autocomplete="off">
						<label class="btn btn-outline-primary mb-3 me-2" asp-for="OrderDetails.HasPineapple">Pineapple</label>

						<input type="checkbox" class="btn-check" asp-for="OrderDetails.HasTuna" autocomplete="off">
						<label class="btn btn-outline-primary mb-3 me-2" asp-for="OrderDetails.HasTuna">Tuna</label>

						<input type="checkbox" class="btn-check" asp-for="OrderDetails.HasPrawn" autocomplete="off">
						<label class="btn btn-outline-primary mb-3 me-2" asp-for="OrderDetails.HasPrawn">Prawn</label>

						<input type="checkbox" class="btn-check" asp-for="OrderDetails.HasHam" autocomplete="off">
						<label class="btn btn-outline-primary mb-3 me-2" asp-for="OrderDetails.HasHam">Ham</label>

						<input type="checkbox" class="btn-check" asp-for="OrderDetails.HasBeef" autocomplete="off">
						<label class="btn btn-outline-primary mb-3 me-2" asp-for="OrderDetails.HasBeef">Beef</label>
					</div>
				</div>
			</fieldset>
			<div class="d-grid">
				<button type="submit" class="btn btn-lg btn-warning">
					<i class="bi bi-cart-check"></i>&nbsp;Order!
				</button>
			</div>

		</form>
	</div>
</div>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
