@model IEnumerable<PizzaPreset>

<div class="container font-monospace">
	<div class="mt-4">
		<h2 class="display-4" style="letter-spacing: 1px;">Pizza Presets</h2>
		<hr />
	</div>
	<div class="text-end mb-2">
		<a class="btn btn-outline-warning" asp-controller="PizzaPreset" asp-action="CreatePreset">
			<i class="bi bi-plus-circle"></i>&nbsp;Create New
		</a>
	</div>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th class="ps-3 fs-5">
					Name
				</th>
				<th>

				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var preset in Model)
			{
				<tr class="align-middle">
					<td class="col-7 ps-4">
						@preset.PizzaName
					</td>
					<td class="col-5 text-end">
						<a class="btn btn-outline-primary col-md-3" asp-controller="PizzaPreset" asp-action="EditPreset" asp-route-id="@preset.PizzaId">
							<i class="bi bi-pencil-square"></i>&nbsp;Edit
						</a>
						<a class="btn btn-outline-info col-md-3" asp-controller="PizzaPreset" asp-action="PresetDetail" asp-route-id="@preset.PizzaId">
							<i class="bi bi-justify"></i>&nbsp;Details
						</a>
						<a class="btn btn-outline-danger col-md-3" data-bs-toggle="modal" data-bs-target="#deleteConfirmation-@preset.PizzaId">
							<i class="bi bi-trash3"></i>&nbsp;Delete
						</a>
						@{
							Html.RenderPartial("_DeleteConfirmation", new DeleteData(@preset.PizzaId, @preset.GetType()));
						}
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
