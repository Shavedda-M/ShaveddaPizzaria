@model IEnumerable<PizzaOrder>

<div class="container font-monospace">
	<div class="mt-4">
		<h2 class="display-4" style="letter-spacing: 1px;">Pizza Presets</h2>
		<hr />
	</div>
	<div class="table-responsive text-break">
		<table class="table table-striped table-hover">
			<thead>
				<tr class="fs-5">
					<th class="ps-3">
						Email
					</th>
					<th>
						Pizza Name
					</th>
					<th>
						Address
					</th>
					<th>

					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var order in Model)
				{
					<tr class="align-middle">
						<td class="ps-4">
							@order.Email
						</td>
						<td class="col-3">
							@order.OrderDetails.PizzaName
						</td>
						<td class="col-4 align-middle">
							@order.Address
						</td>
						<td class="col-3 text-end">
							<a class="btn btn-outline-info col-md-5" asp-action="OrderDetail" asp-route-id="@order.OrderId">
								<i class="bi bi-justify"></i>&nbsp;Details
							</a>
							<a class="btn btn-outline-danger col-md-5" data-bs-toggle="modal" data-bs-target="#deleteConfirmation-@order.OrderDetails.PizzaId">
								<i class="bi bi-trash3"></i>&nbsp;Delete
							</a>
							@{
								Html.RenderPartial("_DeleteConfirmation", new DeleteData(@order.OrderDetails.PizzaId, @order.GetType()));
							}
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>